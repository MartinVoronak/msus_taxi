	<!-- TRANSITIONS -->
	<transition>
		<id>2</id>
		<x>580</x>
		<y>180</y>
		<label>dobit kredit [zakaznik]</label>
		<assignPolicy>auto</assignPolicy>
		<roleRef>
			<id>zakaznik</id>
			<logic>
				<perform>true</perform>
			</logic>
		</roleRef>
	</transition>
	<transition>
		<id>4</id>
		<x>380</x>
		<y>300</y>
		<label>zobrazit stav uctu [zakaznik]</label>
		<roleRef>
			<id>zakaznik</id>
			<logic>
				<view>true</view>
			</logic>
		</roleRef>
		<dataGroup>
			<id>profile_status_grp</id>
			<dataRef>
				<id>zakaznik_credit</id>
				<logic>
					<behavior>editable</behavior>
					<behavior>required</behavior>
				</logic>
			</dataRef>
		</dataGroup>
	</transition>
	<transition>
		<id>7</id>
		<x>220</x>
		<y>380</y>
		<label>zobrazit historiu objednavok [zakaznik]</label>
	</transition>
	<transition>
		<id>11</id>
		<x>940</x>
		<y>180</y>
		<label>vyplnenie formularu [zakaznik]</label>
		<assignPolicy>auto</assignPolicy>
		<dataGroup>
			<id>kredit_grp</id>
			<dataRef>
				<id>zakaznik_card</id>
				<logic>
					<behavior>editable</behavior>
					<behavior>required</behavior>
				</logic>
			</dataRef>
			<dataRef>
				<id>zakaznik_card_expire</id>
				<logic>
					<behavior>editable</behavior>
					<behavior>required</behavior>
				</logic>
			</dataRef>
			<dataRef>
				<id>zakaznik_card_special</id>
				<logic>
					<behavior>editable</behavior>
					<behavior>required</behavior>
				</logic>
			</dataRef>
			<dataRef>
				<id>zakaznik_cash</id>
				<logic>
					<behavior>editable</behavior>
					<behavior>required</behavior>
				</logic>
			</dataRef>
		</dataGroup>
	</transition>
	<transition>
		<id>15</id>
		<x>734</x>
		<y>455</y>
		<label>potvrdenie udajov [system]</label>
		<assignPolicy>auto</assignPolicy>
		<event type="finish">
			<id>finish15</id>
			<actions phase="pre">
				<action>
                    platne: f.41,
                    neplatne: f.42,
                    cashVal: f.zakaznik_cash,
                    credit: f.zakaznik_credit,
                    card_number: f.zakaznik_card;

                    change platne value {
                    if(card_number.value.length() != 16 || !card_number.value.matches("[0-9]+") ){
                        return 0;
                    }
                    change credit value {
                            return credit + cashVal;
                        }
                        return 1;
                    }

                    change neplatne value {
                    if(card_number.value.length() != 16 || !card_number.value.matches("[0-9]+")){
                        return 1;
                    }
                        return 0;
                    }
                </action>
			</actions>
		</event>
	</transition>
	<transition>
		<id>42</id>
		<x>204</x>
		<y>156</y>
		<label>registracia [zakaznik]</label>
		<dataGroup>
			<id>kredit_grp</id>
			<dataRef>
				<id>zakaznik_name</id>
				<logic>
					<behavior>editable</behavior>
					<behavior>required</behavior>
				</logic>
			</dataRef>
		</dataGroup>
	</transition>
