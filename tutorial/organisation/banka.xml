<?xml version="1.0" encoding="UTF-8"?>
<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xsi:noNamespaceSchemaLocation="https://modeler.netgrif.com/petriflow_schema.xsd">
	<id>1</id>
	<initials>BNK</initials>
	<icon>account_balance</icon>
	<defaultRole>false</defaultRole>
	<!--ROLE-->
	<role>
		<id>system</id>
		<title>Systém</title>
	</role>
	<role>
		<id>admin</id>
		<title>Admin</title>
	</role>
	<!-- DATA -->
	<data type="text">
		<id>bank_name</id>
		<title>Názov banky</title>
	</data>
	<data type="text">
		<id>bank_code</id>
		<title>Kód banky</title>
	</data>
	<data type="text">
		<id>swift_code</id>
		<title>Swift kód</title>
	</data>
	<!-- important -->
	<data type="boolean">
		<id>is_active</id>
		<title></title>
		<init>false</init>
	</data>
	<!-- TRANSITIONS -->
	<transition>
		<id>2</id>
		<x>278</x>
		<y>178</y>
		<label>Vytvoriť banku</label>
		<roleRef>
			<id>admin</id>
			<logic>
				<perform>true</perform>
			</logic>
		</roleRef>
		<dataGroup>
			<id>new_bank_group</id>
			<dataRef>
				<id>bank_name</id>
				<logic>
					<behavior>editable</behavior>
					<behavior>required</behavior>
				</logic>
			</dataRef>
			<dataRef>
				<id>bank_code</id>
				<logic>
					<behavior>editable</behavior>
					<behavior>required</behavior>
				</logic>
			</dataRef>
			<dataRef>
				<id>swift_code</id>
				<logic>
					<behavior>editable</behavior>
					<behavior>required</behavior>
				</logic>
			</dataRef>
		</dataGroup>

		<event type="finish">
			<id>1</id>
			<actions phase="post">
				<action>
					is_active: f.is_active;

					change is_active value { true }
				</action>
			</actions>
		</event>
	</transition>
	<transition>
		<id>4</id>
		<x>309</x>
		<y>314</y>
		<label>Deaktivovať banku</label>
		<roleRef>
			<id>admin</id>
			<logic>
				<perform>true</perform>
			</logic>
		</roleRef>

		<event type="finish">
			<id>1</id>
			<actions phase="post">
				<action>
					is_active: f.is_active;

					change is_active value { false }
				</action>
			</actions>
		</event>
	</transition>
	<transition>
		<id>5</id>
		<x>499</x>
		<y>308</y>
		<label>Oživiť banku</label>
		<roleRef>
			<id>admin</id>
			<logic>
				<perform>true</perform>
			</logic>
		</roleRef>
	</transition>
	<transition>
		<id>7</id>
		<x>447</x>
		<y>56</y>
		<label>Zobraziť informácie</label>
		<roleRef>
			<id>admin</id>
			<logic>
				<perform>true</perform>
			</logic>
		</roleRef>
		<dataGroup>
			<id>show_bank_group</id>
			<dataRef>
				<id>bank_name</id>
				<logic>
					<behavior>visible</behavior>
				</logic>
			</dataRef>
			<dataRef>
				<id>bank_code</id>
				<logic>
					<behavior>visible</behavior>
				</logic>
			</dataRef>
			<dataRef>
				<id>swift_code</id>
				<logic>
					<behavior>visible</behavior>
				</logic>
			</dataRef>
		</dataGroup>
	</transition>
	<transition>
		<id>8</id>
		<x>573</x>
		<y>177</y>
		<label>Editovať informácie</label>
		<roleRef>
			<id>admin</id>
			<logic>
				<perform>true</perform>
			</logic>
		</roleRef>
		<dataGroup>
			<id>edit_bank_grp</id>
			<dataRef>
				<id>bank_name</id>
				<logic>
					<behavior>editable</behavior>
					<behavior>required</behavior>
				</logic>
			</dataRef>
			<dataRef>
				<id>bank_code</id>
				<logic>
					<behavior>editable</behavior>
					<behavior>required</behavior>
				</logic>
			</dataRef>
			<dataRef>
				<id>swift_code</id>
				<logic>
					<behavior>editable</behavior>
					<behavior>required</behavior>
				</logic>
			</dataRef>
		</dataGroup>
	</transition>
	<!-- PLACES -->
	<place>
		<id>1</id>
		<x>181</x>
		<y>182</y>
		<label>IN</label>
		<tokens>1</tokens>
		<static>false</static>
	</place>
	<place>
